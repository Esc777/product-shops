<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/card_view_default_height"
                                   android:layout_margin="@dimen/standard_margin"
                                   app:cardCornerRadius="@dimen/card_view_corners">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_number_card_view_custom_layout"
                android:layout_width="@dimen/dimen_fully_stretchable"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Номер магазина: №12"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_name_card_view_custom_layout"
                android:layout_width="@dimen/dimen_fully_stretchable"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_number_card_view_custom_layout"
                tools:text="Название магазина:пяторочка"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_address_card_view_custom_layout"
                android:layout_width="@dimen/dimen_fully_stretchable"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_dimen_8"
                android:layout_marginStart="@dimen/base_dimen_8"
                android:layout_marginTop="@dimen/base_dimen_8"
                android:layout_marginBottom="@dimen/base_dimen_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_shop_name_card_view_custom_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="адресс: улица Советская 13"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
